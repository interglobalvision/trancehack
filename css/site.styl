@import "resets"

// Grid of 12 90px columns with 16px gutter
// generated by https://github.com/patrickbest/css-gridgen-mystyle
$cols = 12
$col = 90px
$gutter = 16px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// VARIABLES

  // MARGINS

$margin-basic = 10px

$margin-small = ($margin-basic / 2)
$margin-large = ($margin-basic * 4)
$margin-larger = ($margin-basic * 7.5)

  // DOCK

$dock-height = 120px
$dock-content-height = ($dock-height - ($margin-basic * 3))

  // FONTS

$font-size-basic = 21px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

  // COLORS

$color-black-soft = rgb(14,14,14)
$color-white-soft = rgb(253,253,253)

// TYPOGRAPHY

body
  font-family:helvetica,arial,sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 1.5em

h2
  font-size: 2em

h3
  font-size: 1.5em

h1,h2,h3,h4,h5,h6
  line-height: $font-leading-basic

p
  margin-bottom: 1em


// LINKS

a,a:active,a:visited
  color:inherit


// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

img
  max-width: 100%
  height: auto


// DOCK NAV

#dock
  z-index: 190
  position: fixed
  bottom: 0
  height: $dock-height
  left: 0
  right: 0
  text-align: center

#dock-list
  background-color: rgba(0,0,0,0.55)
  display: inline-block
  border-radius: $margin-basic
  padding: $margin-basic
  height: ($dock-height + $margin-basic)
  border: 4px double white

  img
    vertical-align: top
    max-height: $dock-content-height

.dock-divider
  height: $dock-content-height
  margin-left: $margin-basic
  margin-right: $margin-basic
  border-left: 4px double white

// GIF POPOVER
  #gif-popover
    width: 100%
    height: 100%
    position: fixed
    background-position: center
    background-repeat: no-repeat
    background-size: 60%
    top: 0
    left: 0
    cursor: pointer

// FRONT PAGE
.home
  iframe, .front-page-bg, .front-page-overlay
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    pofinter-events: none
    z-index: 0
    background-position: center
    background-repeat: no-repeat
  .front-page-bg
    background-size: cover
  .front-page-overlay
    background-size: 70%



// POSTS

.post
  width: 95%
  max-width: 900px
  margin: $margin-large auto
  text-align: center


// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))
  html
    width: 100%
